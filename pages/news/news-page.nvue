<template>
	<view class="page-news">
		<!-- #ifdef MP-QQ -->
		<scroll-view class="listview" style="flex: 1;" enableBackToTop="true" scroll-y @scrolltolower="loadMore()">
			<view v-for="(item, index) in dataList" :key="item.id">
				<news-item :newsItem="item" @close="closeItem(index)"></news-item>
			</view>
			<view class="loading-more" v-if="isLoading || dataList.length > 4">
				<text class="loading-more-text">{{loadingText}}</text>
			</view>
		</scroll-view>
		<!-- #endif -->
		<!-- QQ multipleSlots=true bug -->
		<!-- #ifndef MP-QQ -->
		<uni-list class="listview" :enableBackToTop="true" :scroll-y="true" @scrolltolower="loadMore()">
			<uni-refresh class="refresh" @refresh="onrefresh" @pullingdown="onpullingdown" :display="refreshing ? 'show' : 'hide'">
				<div class="refresh-view">
					<image class="refresh-icon" :src="refreshIcon" :style="{width: (refreshing || pulling) ? 0: '32px'}" :class="{'refresh-icon-active': refreshFlag}"></image>
					<uni-load-more v-if="refreshing" class="loading-icon" status="loading" :contentText="loadingMoreText"></uni-load-more>
					<text class="loading-text">{{refreshText}}</text>
				</div>
			</uni-refresh>
			<uni-cell v-for="(item, index) in dataList" :key="item.id">
				<news-item :newsItem="item" @close="closeItem(index)"></news-item>
			</uni-cell>
			<uni-cell v-if="isLoading || dataList.length > 4">
				<view class="loading-more">
					<text class="loading-more-text">{{loadingText}}</text>
				</view>
			</uni-cell>
		</uni-list>
		<!-- #endif -->
		<no-data class="no-data" v-if="isNoData" @retry="loadMore"></no-data>
	</view>
</template>

<script>
	import uniList from '@/components/uni-list.vue';
	import uniCell from '@/components/uni-cell.vue';
	import uniRefresh from '@/components/uni-refresh.vue';
	import uniLoadMore from '@/components/uni-load-more.vue';
	import noData from '@/components/nodata.nvue';
	import newsItem from './news-item.nvue';
	import { responseCode } from '../../common/constants.js'

	export default {
		components: {
			uniList,
			uniCell,
			uniRefresh,
			uniLoadMore,
			noData,
			newsItem
		},
		props: {
			nid: {
				type: [Number, String],
				default: ''
			}
		},
		data() {
			return {
				pageNum: 0,
				dataList: [],
				pulling: false,
				refreshing: false,
				refreshFlag: false,
				refreshText: "",
				isLoading: false,
				loadingText: '加载中...',
				isNoData: false,
				pulling: false,
				loadingMoreText: {
					contentdown: '',
					contentrefresh: '',
					contentnomore: ''
				},
				refreshIcon: "data:image/png;base64,"
			}
		},
		created() {
			this.pullTimer = null;
			this.requestParams = {
				// columnId:this.openId,
				// pageId:this.pageId,
				pageSize:8,
				pageNum: this.pageNum,
				token: uni.getStorageSync('token'),
			};
		},
		methods: {
			loadData(refresh) {
				if (this.isLoading) {
					return;
				}
				this.requestParams.pageNum=this.pageNum
				console.log(this.requestParams)
				this.isLoading = true;
				this.isNoData = false;

				uniCloud
					.callFunction({
						name: 'getOrderById',
						data: this.requestParams,
					})
					.then(res => {
						console.log(res)
						this.isLoading = false;
						if (refresh) {
							this.refreshing = false;
							this.refreshFlag = false;
							this.refreshText = "已刷新";
							if (this.pullTimer) {
								clearTimeout(this.pullTimer);
							}
							this.pullTimer = setTimeout(() => {
								this.pulling = false;
							}, 1000);
						}
						console.log(res.result.msg)
						const data_list = res.result.msg.map((news) => {
							return {
								contactName: news.contactName,
								damagedObject: news.damagedObject,
								detail: news.detail,
								datetime: (new Date(news.create_time)).getFullYear() + '/' +
									(new Date(news.create_time)).getMonth() + '/' +
									(new Date(news.create_time)).getDate() + ' ' +
									(new Date(news.create_time)).getHours() + ':' +
									(new Date(news.create_time)).getMinutes(),
								phone: news.phone,
								image_url: news.cover,
								floor: news.floor,
							};
						});
						console.log(data_list)
						if (refresh) {
							this.dataList = data_list;
							this.pageNum = 0;
						} else {
							this.dataList = this.dataList.concat(data_list);
							this.pageNum += 1;
						}
						this.isNoData = this.dataList<=0;
					})
					.catch((err) => {
						this.isLoading = false;
						if (refresh) {
							this.refreshing = false;
							this.refreshFlag = false;
							this.refreshText = "已刷新";
							if (this.pullTimer) {
								clearTimeout(this.pullTimer);
							}
							this.pullTimer = setTimeout(() => {
								this.pulling = false;
							}, 1000);
						}
						//结束加载
						if (this.dataList.length == 0) {
							this.isNoData = true;
						}
						uni.hideLoading();
						uni.showModal({
							content: '数据加载失败，' + err.message,
							showCancel: false
						});
					});
					if(res.result.status == responseCode.failed){
						this.isNoData = true;
						return;
					}
			},
			loadMore(e) {
				this.loadData();
			},
			refreshData() {
				if (this.isLoading) {
					return;
				}
				this.pulling = true;
				this.refreshing = true;
				this.refreshText = "正在刷新...";
				this.loadData(true);
			},
			onrefresh(e) {
				this.refreshData();
			},
			onpullingdown(e) {
				if (this.refreshing) {
					return;
				}

				this.pulling = false;
				if (Math.abs(e.pullingDistance) > Math.abs(e.viewHeight)) {
					this.refreshFlag = true;
					this.refreshText = "释放立即刷新";
				} else {
					this.refreshFlag = false;
					this.refreshText = "下拉可以刷新";
				}
			},
			closeItem(index) {
				uni.showModal({
					content: '确认接单？',
					success: (res) => {
						if (res.confirm) {
							uniCloud
								.callFunction({
									name: 'takeOrder',
									data: {
										token: uni.getStorageSync('token'),
										orderId: newsItem.order_id,
									},
								})
								.then(res => {
									if (res.result.status === '200') {
										this.dataList.splice(index, 1);
										uni.showModal({
											content: res.result.msg
										});
									} else {
										uni.showModal({
											content: res.result.msg
										});
									}

								})
								.catch((err) => {
									uni.showModal({
										content: '发送失败，请稍后重试。错误信息：' + err.message,
										showCancel: false
									});
								});

						}
					}
				})
			},
		}
	}
</script>

